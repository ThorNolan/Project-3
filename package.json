{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node ./bin/www",
    "start:dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "ejs": "~2.5.7",
    "mongoose": "^5.3.16",
    "morgan": "~1.9.0",
    "react": "^16.6.3",
    "react-dom": "^16.8.6",
    "react-reveal": "^1.2.2",
    "react-scrollchor": "^6.0.0",
    "serve-favicon": "~2.4.5",
    "superagent": "^3.8.2"
  },
  "engines": {
    "node": "^8",
    "yarn": "1.4.0"
  }
}
